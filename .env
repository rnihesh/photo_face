# Path to your external hard drive with photos
PHOTOS_PATH=/Volumes/Elements/iPhone 14 Pro

# Database path (will be created in project folder)
DATABASE_PATH=./photo_face.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Processing Configuration
BATCH_SIZE=32
MAX_WORKERS=4

# Face Detection Settings
FACE_DETECTION_MODEL=hog  # 'hog' for CPU only, 'cnn' for GPU (slower but more accurate and uses GPU!)
NUM_JITTERS=1  # Number of times to re-sample for face encoding (higher = more accurate but slower)
FACE_DISTANCE_THRESHOLD=0.6  # Lower = stricter matching

# Clustering Settings
MIN_CLUSTER_SIZE=3  # Minimum faces to form a cluster
CLUSTER_EPSILON=0.25  # Clustering distance threshold (lower = stricter, very strict clustering)

# Supported image formats
IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.bmp,.tiff,.tif,.heic,.heif

# Log level
LOG_LEVEL=INFO
